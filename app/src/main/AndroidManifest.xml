<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activities.ResultActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.ResultPage" />
        <activity
            android:name=".presentation.activities.GameActivity"
            android:exported="false"
            android:parentActivityName=".presentation.activities.MainActivity"
            android:theme="@style/Base.Theme.GamePage" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MathGame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>